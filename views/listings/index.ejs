<% layout("/layouts/boilerplate") %>
<body>
  <h3 class="text-center my-4">All Hotels</h3>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 px-5 mb-5">
    <% for(let listing of allListings) { %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <a href="/listings/<%= listing._id %>">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.image.filename %>" style="height: 20rem; object-fit: cover;">
          </a>
          <div class="card-body">
            <h5 class="card-title">
              <a href="/listings/<%= listing._id %>" class="text-dark text-decoration-none">
                <%= listing.title %>
              </a>
            </h5>
            <p class="card-text">
              &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
            </p>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</body>
